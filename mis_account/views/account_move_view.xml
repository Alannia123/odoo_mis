<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="account_move_shipment_inherit" model="ir.ui.view">
        <field name="name">account.move.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='other_tab_group']" position="inside">
                <group string="Signature">
                    <field name="signature" widget="signature" class="oe_avatar"/>
                </group>
            </xpath>
        </field>
    </record>


</odoo>


